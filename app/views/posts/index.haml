%h1 Posts

%table
  %thead 
    %th Title
    %th Body
    %th Actions
  %tbody
    - @posts.each do |post|
      %tr
        %td= post.title
        %td= post.body
        %td
          = link_to "Edit", edit_post_path(post)
          = link_to "Delete", post_path(post), method: :delete, data: { confirm: "Are you sure you want to delete #{post.title}" }


= link_to "New Post", new_post_path
